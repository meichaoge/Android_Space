<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <Button
        android:id="@+id/testButton01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测试"
        android:background="@drawable/statelistdrawabletest"/>

    <!--使用StatelistDrawable 资源控制状态-->

    <Button
        android:id="@+id/testButton02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="修改状态"
        android:layout_below="@id/testButton01"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />

    <!--使用SharpDrawable 绘制圆角-->
    <Button
        android:id="@+id/testButton03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testButton02"
        android:text="圆角"
        android:background="@drawable/button_round"
        />



</RelativeLayout>