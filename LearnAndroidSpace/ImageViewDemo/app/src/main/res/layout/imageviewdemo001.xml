<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/penny_bank"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/penny_bank"/>


    <!--src不会根据区域拉伸，并且居中显示-->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/penny_bank"/>

    <!--backround 会根据区域拉伸-->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/penny_bank"/>

    <!--src不会根据区域拉伸，并且居中显示,当显示区域小于图片大小时候回缩放-->
    <ImageView
        android:layout_width="30dp"
        android:layout_height="35dp"
        android:src="@drawable/penny_bank"/>

    <!--backround 会根据区域拉伸,通过禁用bitmap android:tileMode 来解决拉伸变形-->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/penny_bank_bitmap"/>

</LinearLayout>